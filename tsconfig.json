{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2018",
    "module":"ESNext",
    "lib": ["dom", "es2021"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declarationDir": "lib",
    "outDir": "lib",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "tests/**/*",
    "src/setup/node.ts"
  ]
}
